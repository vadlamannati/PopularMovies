<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadTextStyle" >

        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:layout_height">@dimen/layout_height</item>

    </style>

    <style name="SubHeadTextStyle" >

        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:layout_height">@dimen/layout_height</item>

    </style>

    <style name="ParagraghTextStyle" >

        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:layout_height">@dimen/layout_height</item>

    </style>

    <style name="MainActivityStyle">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@color/mainActivityBackgroundColor</item>
    </style>

    <style name="SpecificMovieStyle">
        <item name="android:padding">@dimen/padding</item>
        <item name="android:background">@color/movieDetailBackgroundColor</item>
    </style>

</resources>
