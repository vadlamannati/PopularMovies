<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300sp"
    android:orientation="horizontal"
    android:columnCount="3">

    <TextView
        android:id="@+id/movie_release_date_header"
        android:text="@string/release_date"/>

    <TextView
        android:id="@+id/movie_release_date_value"
        android:text="test"/>

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_rowSpan="3"
        android:layout_gravity="fill"/>

    <TextView
        android:id="@+id/movie_user_rating_header"
        android:text="@string/user_rating"/>

    <TextView
        android:id="@+id/movie_user_rating_value"
        android:text="test"/>


    <TextView
        android:id="@+id/movie_plot_header"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="@string/plot_header"/>

    <TextView
        android:id="@+id/movie_overview"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="plot"/>

</GridLayout>