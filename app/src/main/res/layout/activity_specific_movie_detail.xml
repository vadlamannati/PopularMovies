<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/specific_movie_layout"
            style="@style/LayoutStyling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movie_release_date_header"
                style="@style/HeaderTextStyling"
                android:text="@string/release_date" />

            <TextView
                android:id="@+id/movie_release_date_value"
                style="@style/ValueTextStyling"
                tools:text="No Value" />

            <ImageView
                android:id="@+id/movie_poster"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:layout_rowSpan="3"
                android:contentDescription="@string/movie_poster"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/movie_user_rating_header"
                style="@style/HeaderTextStyling"
                android:text="@string/user_rating" />

            <TextView
                android:id="@+id/movie_user_rating_value"
                style="@style/ValueTextStyling"
                tools:text="No Value" />

            <TextView
                android:id="@+id/movie_plot_header"
                style="@style/HeaderTextStyling"
                android:layout_columnSpan="2"
                android:layout_gravity="bottom"
                android:paddingTop="16dp"
                android:text="@string/plot_header" />

            <TextView
                android:id="@+id/movie_plot"
                style="@style/ValueTextStyling"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:layout_gravity="fill"
                tools:text="No Value" />

        </GridLayout>
    </ScrollView>
</layout>